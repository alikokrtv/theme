{% doc %}
  @prompt
    Buraya  New Arrival kategorinde olduğumuzu gösteren şlık modern gğzel bi banner
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-new-arrival-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    background: linear-gradient(135deg, {{ block.settings.gradient_color_1 }} 0%, {{ block.settings.gradient_color_2 }} 100%);
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-new-arrival-banner__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    max-width: {{ block.settings.content_max_width }}px;
    margin: 0 auto;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-new-arrival-banner__badge-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    border-radius: 50px;
    font-size: {{ block.settings.badge_font_size }}px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 16px;
  }

  .ai-new-arrival-banner__badge-icon-{{ ai_gen_id }} {
    width: 16px;
    height: 16px;
  }

  .ai-new-arrival-banner__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: 700;
    color: {{ block.settings.title_color }};
    margin: 0 0 12px 0;
    line-height: 1.2;
  }

  .ai-new-arrival-banner__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_font_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    line-height: 1.5;
  }

  .ai-new-arrival-banner__decorative-{{ ai_gen_id }} {
    position: absolute;
    pointer-events: none;
    opacity: {{ block.settings.decoration_opacity | divided_by: 100.0 }};
  }

  .ai-new-arrival-banner__circle-1-{{ ai_gen_id }} {
    top: -50px;
    right: -50px;
    width: 200px;
    height: 200px;
    background: {{ block.settings.decoration_color }};
    border-radius: 50%;
    filter: blur(60px);
  }

  .ai-new-arrival-banner__circle-2-{{ ai_gen_id }} {
    bottom: -30px;
    left: -30px;
    width: 150px;
    height: 150px;
    background: {{ block.settings.decoration_color }};
    border-radius: 50%;
    filter: blur(50px);
  }

  .ai-new-arrival-banner__pattern-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.05;
    background-image: repeating-linear-gradient(
      45deg,
      transparent,
      transparent 10px,
      {{ block.settings.title_color }} 10px,
      {{ block.settings.title_color }} 11px
    );
  }

  @media screen and (max-width: 749px) {
    .ai-new-arrival-banner-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_vertical | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px;
    }

    .ai-new-arrival-banner__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_font_size | times: 0.7 }}px;
    }

    .ai-new-arrival-banner__subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_font_size | times: 0.9 }}px;
    }

    .ai-new-arrival-banner__badge-{{ ai_gen_id }} {
      font-size: {{ block.settings.badge_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-new-arrival-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.show_pattern %}
    <div class="ai-new-arrival-banner__pattern-{{ ai_gen_id }}"></div>
  {% endif %}

  {% if block.settings.show_decorations %}
    <div class="ai-new-arrival-banner__decorative-{{ ai_gen_id }} ai-new-arrival-banner__circle-1-{{ ai_gen_id }}"></div>
    <div class="ai-new-arrival-banner__decorative-{{ ai_gen_id }} ai-new-arrival-banner__circle-2-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-new-arrival-banner__content-{{ ai_gen_id }}">
    {% if block.settings.show_badge %}
      <div class="ai-new-arrival-banner__badge-{{ ai_gen_id }}">
        <svg class="ai-new-arrival-banner__badge-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
        </svg>
        {{ block.settings.badge_text }}
      </div>
    {% endif %}

    {% if block.settings.title != blank %}
      <h1 class="ai-new-arrival-banner__title-{{ ai_gen_id }}">{{ block.settings.title }}</h1>
    {% endif %}

    {% if block.settings.subtitle != blank %}
      <p class="ai-new-arrival-banner__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
    {% endif %}
  </div>
</div>

