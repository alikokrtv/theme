{% doc %}
  @prompt
    NEW ARRIVAL BANNER
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-new-arrival-banner-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    background: {{ block.settings.background_gradient }};
    overflow: hidden;
  }

  .ai-new-arrival-banner__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    gap: {{ block.settings.content_gap }}px;
    max-width: 100%;
  }

  .ai-new-arrival-banner__badge-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.badge_padding_vertical }}px {{ block.settings.badge_padding_horizontal }}px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    border-radius: {{ block.settings.badge_border_radius }}px;
    font-size: {{ block.settings.badge_font_size }}px;
    font-weight: {{ block.settings.badge_font_weight }};
    text-transform: {{ block.settings.badge_text_transform }};
    letter-spacing: {{ block.settings.badge_letter_spacing }}px;
    white-space: nowrap;
  }

  .ai-new-arrival-banner__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_font_size }}px;
    font-weight: {{ block.settings.text_font_weight }};
    text-align: center;
    margin: 0;
  }

  .ai-new-arrival-banner__link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    font-size: {{ block.settings.link_font_size }}px;
    font-weight: {{ block.settings.link_font_weight }};
    text-decoration: {{ block.settings.link_text_decoration }};
    white-space: nowrap;
    transition: opacity 0.2s ease;
  }

  .ai-new-arrival-banner__link-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  .ai-new-arrival-banner__sparkle-{{ ai_gen_id }} {
    position: absolute;
    width: {{ block.settings.sparkle_size }}px;
    height: {{ block.settings.sparkle_size }}px;
    opacity: {{ block.settings.sparkle_opacity }};
    pointer-events: none;
  }

  .ai-new-arrival-banner__sparkle-{{ ai_gen_id }}::before,
  .ai-new-arrival-banner__sparkle-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    background-color: {{ block.settings.sparkle_color }};
  }

  .ai-new-arrival-banner__sparkle-{{ ai_gen_id }}::before {
    width: 100%;
    height: 2px;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
  }

  .ai-new-arrival-banner__sparkle-{{ ai_gen_id }}::after {
    width: 2px;
    height: 100%;
    left: 50%;
    top: 0;
    transform: translateX(-50%);
  }

  @media screen and (max-width: 749px) {
    .ai-new-arrival-banner-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_vertical | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px;
    }

    .ai-new-arrival-banner__content-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.content_gap | times: 0.7 }}px;
    }

    .ai-new-arrival-banner__badge-{{ ai_gen_id }} {
      font-size: {{ block.settings.badge_font_size | times: 0.9 }}px;
    }

    .ai-new-arrival-banner__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_font_size | times: 0.9 }}px;
    }

    .ai-new-arrival-banner__link-{{ ai_gen_id }} {
      font-size: {{ block.settings.link_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-new-arrival-banner-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.show_sparkles %}
    <span
      class="ai-new-arrival-banner__sparkle-{{ ai_gen_id }}"
      style="top: 20%; left: 15%;"
    ></span>
    <span
      class="ai-new-arrival-banner__sparkle-{{ ai_gen_id }}"
      style="top: 70%; left: 85%;"
    ></span>
    <span
      class="ai-new-arrival-banner__sparkle-{{ ai_gen_id }}"
      style="top: 40%; left: 90%;"
    ></span>
  {% endif %}

  <div class="ai-new-arrival-banner__content-{{ ai_gen_id }}">
    {% if block.settings.show_badge %}
      <span class="ai-new-arrival-banner__badge-{{ ai_gen_id }}">
        {{ block.settings.badge_text }}
      </span>
    {% endif %}

    {% if block.settings.banner_text != blank %}
      <p class="ai-new-arrival-banner__text-{{ ai_gen_id }}">
        {{ block.settings.banner_text }}
      </p>
    {% endif %}

    {% if block.settings.link_text != blank and block.settings.link_url != blank %}
      <a
        href="{{ block.settings.link_url }}"
        class="ai-new-arrival-banner__link-{{ ai_gen_id }}"
      >
        {{ block.settings.link_text }}
      </a>
    {% endif %}
  </div>
</div>

