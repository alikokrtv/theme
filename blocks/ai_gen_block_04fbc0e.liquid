{% doc %}
  @prompt
    Create a professional footer section with multiple columns for different product categories, links organized in sections, social media icons, and a dark background similar to a modern e-commerce store footer
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-footer-{{ ai_gen_id }} {
    background-color: {{ block.settings.footer_background_color }};
    color: {{ block.settings.footer_text_color }};
    padding: {{ block.settings.footer_padding_top }}px 0 {{ block.settings.footer_padding_bottom }}px;
  }

  .ai-footer-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-footer-content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
    margin-bottom: 40px;
  }

  .ai-footer-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
  }

  .ai-footer-column-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.column_title_size }}px;
    font-weight: 600;
    margin-bottom: 20px;
    color: {{ block.settings.footer_text_color }};
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-footer-links-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ai-footer-links-{{ ai_gen_id }} li {
    margin-bottom: 12px;
  }

  .ai-footer-links-{{ ai_gen_id }} a {
    color: {{ block.settings.footer_link_color }};
    text-decoration: none;
    font-size: {{ block.settings.link_font_size }}px;
    transition: color 0.3s ease;
    line-height: 1.5;
  }

  .ai-footer-links-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.footer_link_hover_color }};
  }

  .ai-footer-newsletter-{{ ai_gen_id }} {
    margin-bottom: 20px;
  }

  .ai-footer-newsletter-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.newsletter_text_size }}px;
    margin-bottom: 15px;
    line-height: 1.5;
    color: {{ block.settings.footer_text_color }};
  }

  .ai-footer-newsletter-form-{{ ai_gen_id }} {
    display: flex;
    gap: 10px;
    margin-bottom: 20px;
  }

  .ai-footer-newsletter-input-{{ ai_gen_id }} {
    flex: 1;
    padding: 12px 16px;
    border: 1px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: {{ block.settings.input_background_color }};
    color: {{ block.settings.input_text_color }};
    font-size: 14px;
  }

  .ai-footer-newsletter-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_placeholder_color }};
  }

  .ai-footer-newsletter-button-{{ ai_gen_id }} {
    padding: 12px 24px;
    background-color: {{ block.settings.newsletter_button_color }};
    color: {{ block.settings.newsletter_button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 600;
    transition: background-color 0.3s ease;
    white-space: nowrap;
  }

  .ai-footer-newsletter-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.newsletter_button_hover_color }};
  }

  .ai-footer-social-{{ ai_gen_id }} {
    display: flex;
    gap: 15px;
    flex-wrap: wrap;
  }

  .ai-footer-social-link-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.social_icon_size }}px;
    height: {{ block.settings.social_icon_size }}px;
    background-color: {{ block.settings.social_icon_background }};
    color: {{ block.settings.social_icon_color }};
    border-radius: 50%;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .ai-footer-social-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.social_icon_hover_background }};
    color: {{ block.settings.social_icon_hover_color }};
    transform: translateY(-2px);
  }

  .ai-footer-social-link-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.social_icon_size }}px * 0.5);
    height: calc({{ block.settings.social_icon_size }}px * 0.5);
  }

  .ai-footer-bottom-{{ ai_gen_id }} {
    border-top: 1px solid {{ block.settings.footer_border_color }};
    padding-top: 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
  }

  .ai-footer-copyright-{{ ai_gen_id }} {
    font-size: {{ block.settings.copyright_font_size }}px;
    color: {{ block.settings.footer_text_color }};
    opacity: 0.8;
  }

  .ai-footer-payment-icons-{{ ai_gen_id }} {
    display: flex;
    gap: 10px;
    align-items: center;
  }

  .ai-footer-payment-icon-{{ ai_gen_id }} {
    height: 24px;
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .ai-footer-payment-icon-{{ ai_gen_id }}:hover {
    opacity: 1;
  }

  @media screen and (max-width: 768px) {
    .ai-footer-content-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .ai-footer-newsletter-form-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-footer-bottom-{{ ai_gen_id }} {
      flex-direction: column;
      text-align: center;
    }

    .ai-footer-social-{{ ai_gen_id }} {
      justify-content: center;
    }
  }
{% endstyle %}

