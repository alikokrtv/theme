{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
.ai-hero-banner-container-{{ ai_gen_id }} {
  display: flex;
  justify-content: space-between; /* başlık sola, features sağa */
  align-items: center;
  margin: 0 auto;
}

.ai-hero-banner-headline-{{ ai_gen_id }} {
  color: {{ block.settings.headline_color }};
  font-size: {{ block.settings.headline_size }}px;
  font-weight: 700;
  line-height: 1.1;
  margin: 0;
  letter-spacing: -0.02em;
  text-align: left;
}

.ai-hero-banner-features-{{ ai_gen_id }} {
  display: flex;
  justify-content: flex-start;
  align-items: center;   /* dikey ortalı */
  gap: 40px;
  white-space: nowrap;   /* tek satır */
  flex-wrap: nowrap;     /* kırılma yok */
  overflow-x: auto;      /* taşarsa kaydırılabilir */
}

.ai-hero-banner-feature-{{ ai_gen_id }} {
  position: relative;
  text-align: left;
}

.ai-hero-banner-feature-{{ ai_gen_id }}:not(:last-child)::after {
  content: '';
  position: absolute;
  top: 50%;
  right: -20px;
  transform: translateY(-50%);
  width: 2px;
  height: 24px;
  background-color: {{ block.settings.divider_color }};
  opacity: 0.3;
}

.ai-hero-banner-feature-text-{{ ai_gen_id }} {
  color: {{ block.settings.feature_text_color }};
  font-size: {{ block.settings.feature_text_size }}px;
  font-weight: 600;
  line-height: 1.2;
  margin: 0;
  text-align: left;
  white-space: nowrap;
}

@media screen and (max-width: 768px) {
  .ai-hero-banner-{{ ai_gen_id }} {
    padding: 32px 20px;
  }

  .ai-hero-banner-container-{{ ai_gen_id }} {
    flex-direction: column;   /* başlık üstte, features altta */
    align-items: flex-start;  /* sola hizalı */
    gap: 24px;
  }

  .ai-hero-banner-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_size | times: 0.7 }}px;
    text-align: left;
  }

  .ai-hero-banner-features-{{ ai_gen_id }} {
    justify-content: flex-start;
    gap: 20px;
    flex-wrap: nowrap;   /* mobilde de tek satır */
    overflow-x: auto;    /* sığmazsa yatay kaydırma */
  }

  .ai-hero-banner-feature-{{ ai_gen_id }}:not(:last-child)::after {
    display: none; /* mobilde divider kaldırıldı */
  }

  .ai-hero-banner-feature-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.feature_text_size | times: 0.9 }}px;
  }
}
{% endstyle %}

<div class="ai-hero-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-banner-container-{{ ai_gen_id }}">
    <div class="ai-hero-banner-headline-section-{{ ai_gen_id }}">
      {% if block.settings.headline != blank %}
        <h1 class="ai-hero-banner-headline-{{ ai_gen_id }}">
          {{ block.settings.headline }}
        </h1>
      {% else %}
        <h1 class="ai-hero-banner-headline-{{ ai_gen_id }}">
          Your Bold Headline Here
        </h1>
      {% endif %}
    </div>

    <div class="ai-hero-banner-features-{{ ai_gen_id }}">
      {% if block.settings.feature_1_text != blank %}
        <div class="ai-hero-banner-feature-{{ ai_gen_id }}">
          <div class="ai-hero-banner-feature-text-{{ ai_gen_id }}">
            {{ block.settings.feature_1_text }}
          </div>
        </div>
      {% endif %}

      {% if block.settings.feature_2_text != blank %}
        <div class="ai-hero-banner-feature-{{ ai_gen_id }}">
          <div class="ai-hero-banner-feature-text-{{ ai_gen_id }}">
            {{ block.settings.feature_2_text }}
          </div>
        </div>
      {% endif %}

      {% if block.settings.feature_3_text != blank %}
        <div class="ai-hero-banner-feature-{{ ai_gen_id }}">
          <div class="ai-hero-banner-feature-text-{{ ai_gen_id }}">
            {{ block.settings.feature_3_text }}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero banner with features",
  "settings": [
    {
      "type": "header",
      "content": "Headline"
    },
    {
      "type": "textarea",
      "id": "headline",
      "label": "Main headline",
      "default": "Transform Your Style with Premium Fashion"
    },
    {
      "type": "range",
      "id": "headline_size",
      "label": "Headline size",
      "min": 32,
      "max": 80,
      "step": 2,
      "unit": "px",
      "default": 56
    },
    {
      "type": "color",
      "id": "headline_color",
      "label": "Headline color",
      "default": "#1a1a1a"
    },
    {
      "type": "header",
      "content": "Features"
    },
    {
      "type": "text",
      "id": "feature_1_text",
      "label": "Feature 1 text",
      "default": "Premium Quality"
    },
    {
      "type": "text",
      "id": "feature_2_text",
      "label": "Feature 2 text",
      "default": "Fast Shipping"
    },
    {
      "type": "text",
      "id": "feature_3_text",
      "label": "Feature 3 text",
      "default": "24/7 Support"
    },
    {
      "type": "header",
      "content": "Features style"
    },
    {
      "type": "range",
      "id": "feature_text_size",
      "label": "Feature text size",
      "min": 14,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 18
    },
    {
      "type": "color",
      "id": "feature_text_color",
      "label": "Feature text color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "divider_color",
      "label": "Divider color",
      "default": "#1a1a1a"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border radius",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "Hero banner with features"
    }
  ]
}
{% endschema %}
