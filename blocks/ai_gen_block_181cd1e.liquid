{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
 .ai-category-showcase-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
}

.ai-category-showcase-container-{{ ai_gen_id }} {
    max-width: 2000px;
    margin: 0 auto;
    padding: 0 20px;
}

.ai-category-showcase-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
}

.ai-category-showcase-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 10px;
    font-weight: 600;
}

.ai-category-showcase-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
}

/* --- Scroll Container --- */
.ai-category-showcase-scroll-container-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
}

/* --- Horizontal Row, No Wrap, Drag Scroll --- */
.ai-category-showcase-grid-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: nowrap;                   /* TEK SATIR */
    gap: {{ block.settings.card_spacing }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding: 5px;
    cursor: grab;
    user-select: none;
    justify-content: flex-start;
}

.ai-category-showcase-grid-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
}

.ai-category-showcase-grid-{{ ai_gen_id }}.dragging {
    cursor: grabbing;
    scroll-behavior: auto;
}

/* --- Category Card --- */
.ai-category-showcase-card-{{ ai_gen_id }} {
    flex: 0 0 auto;
    width: {{ block.settings.card_width }}px;
    height: {{ block.settings.card_height }}px;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    box-shadow: none; /* daha temiz görünüm */
}

/* Daha büyük görseller için desktop genişlik ayarı */
@media (min-width: 879px) {
    .ai-category-showcase-card-{{ ai_gen_id }} {
        min-width: 285px;
    }
}

/* Hover efekti */
.ai-category-showcase-card-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.card_hover_background }};
    transform: translateY(-4px);
}

/* --- Image Container (BÜYÜTÜLDÜ) --- */
.ai-category-showcase-card-image-{{ ai_gen_id }} {
    width: 140px;     /* yeni büyük boyut */
    height: 140px;
    margin-bottom: 12px;
    transition: transform 0.3s ease;
    border-radius: 8px;
    overflow: hidden;
}

/* Hover scale efekti */
.ai-category-showcase-card-{{ ai_gen_id }}:hover 
.ai-category-showcase-card-image-{{ ai_gen_id }} {
    transform: scale(1.12);
}

/* Image fit */
.ai-category-showcase-card-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
}

/* Placeholder */
.ai-category-showcase-card-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
}

/* Title */
.ai-category-showcase-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    color: {{ block.settings.card_text_color }};
    text-align: center;
    margin: 0;
    font-weight: 500;
    line-height: 1.3;
}

.ai-category-showcase-card-{{ ai_gen_id }}:hover 
.ai-category-showcase-card-title-{{ ai_gen_id }} {
    color: {{ block.settings.card_hover_text_color }};
}

/* --- MOBILE OPTIMIZE --- */
@media screen and (max-width: 768px) {
    .ai-category-showcase-card-{{ ai_gen_id }} {
        width: {{ block.settings.card_width | times: 0.9 }}px;
        height: {{ block.settings.card_height | times: 0.9 }}px;
        padding: {{ block.settings.card_padding | times: 0.9 }}px;
    }

    .ai-category-showcase-card-image-{{ ai_gen_id }} {
        width: 110px;    /* mobilde büyük ama rahatsız etmeyecek */
        height: 110px;
    }

    .ai-category-showcase-card-title-{{ ai_gen_id }} {
        font-size: {{ block.settings.card_title_size }}px;
    }
}

{% endstyle %}

<div class="ai-category-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-category-showcase-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-category-showcase-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-category-showcase-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-category-showcase-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-category-showcase-scroll-container-{{ ai_gen_id }}">
      <div class="ai-category-showcase-grid-{{ ai_gen_id }}" id="ai-category-grid-{{ ai_gen_id }}">
        {% for i in (1..6) %}
          {% liquid
            assign category_name_key = 'category_' | append: i | append: '_name'
            assign category_image_key = 'category_' | append: i | append: '_image'
            assign category_link_key = 'category_' | append: i | append: '_link'
            
            assign category_name = block.settings[category_name_key]
            assign category_image = block.settings[category_image_key]
            assign category_link = block.settings[category_link_key]
          %}

          <a 
            href="{{ category_link | default: '#' }}" 
            class="ai-category-showcase-card-{{ ai_gen_id }}"
            {% if category_link == blank %}onclick="return false;"{% endif %}
          >
            <div class="ai-category-showcase-card-image-{{ ai_gen_id }}">
              {% if category_image != blank %}
                <img 
                  src="{{ category_image | image_url: width: 200 }}" 
                  alt="{{ category_name | escape }}"
                  loading="lazy"
                  width="200"
                  height="200"
                >
              {% else %}
                <div class="ai-category-showcase-card-image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            
            {% if category_name != blank %}
              <h3 class="ai-category-showcase-card-title-{{ ai_gen_id }}">{{ category_name }}</h3>
            {% else %}
              <h3 class="ai-category-showcase-card-title-{{ ai_gen_id }}">Category {{ i }}</h3>
            {% endif %}
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
  (function() {
    const grid = document.getElementById('ai-category-grid-{{ ai_gen_id }}');
    let isDown = false;
    let startX;
    let scrollLeft;

    grid.addEventListener('mousedown', (e) => {
      isDown = true;
      grid.classList.add('dragging');
      startX = e.pageX - grid.offsetLeft;
      scrollLeft = grid.scrollLeft;
      e.preventDefault();
    });

    grid.addEventListener('mouseleave', () => {
      isDown = false;
      grid.classList.remove('dragging');
    });

    grid.addEventListener('mouseup', () => {
      isDown = false;
      grid.classList.remove('dragging');
    });

    grid.addEventListener('mousemove', (e) => {
      if (!isDown) return;
      e.preventDefault();
      const x = e.pageX - grid.offsetLeft;
      const walk = (x - startX) * 2;
      grid.scrollLeft = scrollLeft - walk;
    });

    // Touch events for mobile
    let startTouchX;
    let startScrollLeft;

    grid.addEventListener('touchstart', (e) => {
      startTouchX = e.touches[0].pageX;
      startScrollLeft = grid.scrollLeft;
    });

    grid.addEventListener('touchmove', (e) => {
      if (!startTouchX) return;
      const touchX = e.touches[0].pageX;
      const walk = (startTouchX - touchX) * 1.5;
      grid.scrollLeft = startScrollLeft + walk;
    });

    grid.addEventListener('touchend', () => {
      startTouchX = null;
    });

    // Prevent click events when dragging
    grid.addEventListener('click', (e) => {
      if (grid.classList.contains('dragging')) {
        e.preventDefault();
        e.stopPropagation();
      }
    });
  })();
</script>

