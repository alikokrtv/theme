{% doc %}
  @prompt
    Create a newsletter signup section with the image positioned at the top, followed by the newsletter title, description, and email input field below
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-newsletter-signup-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: {{ block.settings.padding }}px;
    text-align: {{ block.settings.text_alignment }};
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-newsletter-image-wrapper-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.content_spacing }}px;
  }

  .ai-newsletter-image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-newsletter-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
    position: relative;
  }

  .ai-newsletter-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-newsletter-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-newsletter-title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    margin: 0 0 {{ block.settings.content_spacing }}px;
    line-height: 1.2;
  }

  .ai-newsletter-description-{{ ai_gen_id }} {
    color: {{ block.settings.description_color }};
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.5;
    margin: 0 0 {{ block.settings.content_spacing }}px;
  }

  .ai-newsletter-form-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.form_gap }}px;
    align-items: stretch;
  }

  .ai-newsletter-input-wrapper-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .ai-newsletter-input-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.input_padding }}px;
    border: 2px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: {{ block.settings.input_background_color }};
    color: {{ block.settings.input_text_color }};
    font-size: {{ block.settings.input_font_size }}px;
    transition: border-color 0.3s ease;
  }

  .ai-newsletter-input-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: {{ block.settings.input_focus_border_color }};
  }

  .ai-newsletter-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_placeholder_color }};
  }

  .ai-newsletter-button-{{ ai_gen_id }} {
    padding: {{ block.settings.input_padding }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
    white-space: nowrap;
  }

  .ai-newsletter-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
  }

  .ai-newsletter-success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
    font-size: {{ block.settings.description_size }}px;
    margin-top: {{ block.settings.form_gap }}px;
  }

  .ai-newsletter-error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
    font-size: {{ block.settings.description_size }}px;
    margin-top: {{ block.settings.form_gap }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-newsletter-signup-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.75 }}px;
    }

    .ai-newsletter-form-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.form_gap | times: 0.75 }}px;
    }

    .ai-newsletter-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.85 }}px;
    }

    .ai-newsletter-image-{{ ai_gen_id }},
    .ai-newsletter-image-placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.image_height | times: 0.75 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-newsletter-signup-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.image %}
    <div class="ai-newsletter-image-wrapper-{{ ai_gen_id }}">
      <img
        src="{{ block.settings.image | image_url: width: 800 }}"
        alt="{{ block.settings.image.alt | escape }}"
        class="ai-newsletter-image-{{ ai_gen_id }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
      >
    </div>
  {% else %}
    <div class="ai-newsletter-image-wrapper-{{ ai_gen_id }}">
      <div class="ai-newsletter-image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-newsletter-empty-state-{{ ai_gen_id }}">
          Add an image to complete your newsletter signup
        </div>
      </div>
    </div>
  {% endif %}

  {% if block.settings.title != blank %}
    <h2 class="ai-newsletter-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
  {% endif %}

  {% if block.settings.description != blank %}
    <div class="ai-newsletter-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
  {% endif %}

  {% form 'customer' %}
    <input type="hidden" name="contact[tags]" value="newsletter">
    
    <div class="ai-newsletter-form-{{ ai_gen_id }}">
      <div class="ai-newsletter-input-wrapper-{{ ai_gen_id }}">
        <input
          type="email"
          name="contact[email]"
          class="ai-newsletter-input-{{ ai_gen_id }}"
          value="{{ form.email }}"
          placeholder="{{ block.settings.email_placeholder }}"
          aria-required="true"
          autocorrect="off"
          autocapitalize="off"
          autocomplete="email"
          {% if form.errors %}
            aria-invalid="true"
            aria-describedby="ai-newsletter-error-{{ ai_gen_id }}"
          {% endif %}
          {% if form.posted_successfully? %}
            aria-describedby="ai-newsletter-success-{{ ai_gen_id }}"
          {% endif %}
          required
        >
      </div>
      <button
        type="submit"
        class="ai-newsletter-button-{{ ai_gen_id }}"
      >
        {{ block.settings.button_text }}
      </button>
    </div>

    {% if form.errors %}
      <div
        id="ai-newsletter-error-{{ ai_gen_id }}"
        class="ai-newsletter-error-{{ ai_gen_id }}"
      >
        {{ form.errors.messages.email }}
      </div>
    {% endif %}

    {% if form.posted_successfully? %}
      <div
        id="ai-newsletter-success-{{ ai_gen_id }}"
        class="ai-newsletter-success-{{ ai_gen_id }}"
      >
        {{ block.settings.success_message }}
      </div>
    {% endif %}
  {% endform %}
</div>

