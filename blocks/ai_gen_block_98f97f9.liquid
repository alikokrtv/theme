  "name": "Dinamik Koleksiyon",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Başlık",
      "default": "Ürünler"
    },
    {
      "type": "collection",
      "id": "collection_handle",
      "label": "Koleksiyon Seçin"
    }
  ],
  "presets": [
    {
      "name": "Dinamik Koleksiyon Filtreleri1"
    }
  ]
