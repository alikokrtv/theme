{% doc %}
  @prompt
    Create beautiful Christmas-themed sections with red backgrounds and festive lighting effects. Include twinkling lights, glowing elements, and holiday sparkle animations. The sections should have a premium festive look with customizable red background shades and decorative light effects that create a warm Christmas atmosphere.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-christmas-section-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    background: linear-gradient(135deg, {{ block.settings.background_color_1 }} 0%, {{ block.settings.background_color_2 }} 100%);
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    overflow: hidden;
    display: block;
  }

  .ai-christmas-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    max-width: {{ block.settings.content_width }}px;
    margin: 0 auto;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-christmas-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.spacing_between_elements }}px;
    line-height: 1.2;
  }

  .ai-christmas-subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 {{ block.settings.spacing_between_elements }}px;
    line-height: 1.5;
  }

  .ai-christmas-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    margin: 0 0 {{ block.settings.spacing_between_elements }}px;
    line-height: 1.6;
  }

  .ai-christmas-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .ai-christmas-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
  }

  .ai-christmas-lights-container-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }

  .ai-christmas-light-{{ ai_gen_id }} {
    position: absolute;
    width: {{ block.settings.light_size }}px;
    height: {{ block.settings.light_size }}px;
    border-radius: 50%;
    opacity: 0;
  }

  {% if block.settings.enable_twinkling %}
    @keyframes ai-christmas-twinkle-{{ ai_gen_id }} {
      0%, 100% {
        opacity: 0.3;
        transform: scale(1);
      }
      50% {
        opacity: 1;
        transform: scale(1.2);
      }
    }

    .ai-christmas-light-{{ ai_gen_id }} {
      animation: ai-christmas-twinkle-{{ ai_gen_id }} var(--twinkle-duration) ease-in-out infinite;
      animation-delay: var(--twinkle-delay);
    }
  {% endif %}

  {% if block.settings.enable_glow %}
    .ai-christmas-light-{{ ai_gen_id }} {
      box-shadow: 0 0 {{ block.settings.glow_intensity }}px var(--light-color);
    }
  {% endif %}

  .ai-christmas-sparkle-{{ ai_gen_id }} {
    position: absolute;
    width: 4px;
    height: 4px;
    background: {{ block.settings.sparkle_color }};
    border-radius: 50%;
    opacity: 0;
  }

  {% if block.settings.enable_sparkles %}
    @keyframes ai-christmas-sparkle-{{ ai_gen_id }} {
      0% {
        opacity: 0;
        transform: scale(0) rotate(0deg);
      }
      50% {
        opacity: 1;
        transform: scale(1) rotate(180deg);
      }
      100% {
        opacity: 0;
        transform: scale(0) rotate(360deg);
      }
    }

    .ai-christmas-sparkle-{{ ai_gen_id }} {
      animation: ai-christmas-sparkle-{{ ai_gen_id }} var(--sparkle-duration) ease-in-out infinite;
      animation-delay: var(--sparkle-delay);
    }
  {% endif %}

  .ai-christmas-snow-{{ ai_gen_id }} {
    position: absolute;
    width: 8px;
    height: 8px;
    background: {{ block.settings.snow_color }};
    border-radius: 50%;
    opacity: 0.8;
  }

  {% if block.settings.enable_snow %}
    @keyframes ai-christmas-snowfall-{{ ai_gen_id }} {
      0% {
        transform: translateY(-10px) translateX(0);
        opacity: 0;
      }
      10% {
        opacity: 0.8;
      }
      90% {
        opacity: 0.8;
      }
      100% {
        transform: translateY(calc(100vh + 10px)) translateX(var(--snow-drift));
        opacity: 0;
      }
    }

    .ai-christmas-snow-{{ ai_gen_id }} {
      animation: ai-christmas-snowfall-{{ ai_gen_id }} var(--snow-duration) linear infinite;
      animation-delay: var(--snow-delay);
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-christmas-section-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.6 }}px {{ block.settings.padding_horizontal | times: 0.6 }}px {{ block.settings.padding_bottom | times: 0.6 }}px;
    }

    .ai-christmas-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.6 }}px;
    }

    .ai-christmas-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.7 }}px;
    }

    .ai-christmas-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-christmas-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_text_size | times: 0.9 }}px;
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
    }
  }
{% endstyle %}

<christmas-section-{{ ai_gen_id }} class="ai-christmas-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-christmas-lights-container-{{ ai_gen_id }}">
    {% if block.settings.enable_twinkling %}
      {% for i in (1..block.settings.light_count) %}
        {% assign x_pos = i | times: 7 | modulo: 100 %}
        {% assign y_pos = i | times: 13 | modulo: 100 %}
        {% assign duration = i | modulo: 3 | plus: 2 %}
        {% assign delay = i | modulo: 10 | divided_by: 10.0 %}
        {% assign color_index = i | modulo: 4 %}
        
        {% case color_index %}
          {% when 0 %}
            {% assign light_color = block.settings.light_color_1 %}
          {% when 1 %}
            {% assign light_color = block.settings.light_color_2 %}
          {% when 2 %}
            {% assign light_color = block.settings.light_color_3 %}
          {% else %}
            {% assign light_color = block.settings.light_color_4 %}
        {% endcase %}

        <div
          class="ai-christmas-light-{{ ai_gen_id }}"
          style="
            left: {{ x_pos }}%;
            top: {{ y_pos }}%;
            background-color: {{ light_color }};
            --light-color: {{ light_color }};
            --twinkle-duration: {{ duration }}s;
            --twinkle-delay: {{ delay }}s;
          "
        ></div>
      {% endfor %}
    {% endif %}

    {% if block.settings.enable_sparkles %}
      {% for i in (1..block.settings.sparkle_count) %}
        {% assign x_pos = i | times: 11 | modulo: 100 %}
        {% assign y_pos = i | times: 17 | modulo: 100 %}
        {% assign duration = i | modulo: 2 | plus: 2 %}
        {% assign delay = i | modulo: 15 | divided_by: 10.0 %}

        <div
          class="ai-christmas-sparkle-{{ ai_gen_id }}"
          style="
            left: {{ x_pos }}%;
            top: {{ y_pos }}%;
            --sparkle-duration: {{ duration }}s;
            --sparkle-delay: {{ delay }}s;
          "
        ></div>
      {% endfor %}
    {% endif %}

    {% if block.settings.enable_snow %}
      {% for i in (1..block.settings.snow_count) %}
        {% assign x_pos = i | times: 9 | modulo: 100 %}
        {% assign duration = i | modulo: 5 | plus: 8 %}
        {% assign delay = i | modulo: 20 | divided_by: 10.0 %}
        {% assign drift = i | modulo: 60 | minus: 30 %}

        <div
          class="ai-christmas-snow-{{ ai_gen_id }}"
          style="
            left: {{ x_pos }}%;
            --snow-duration: {{ duration }}s;
            --snow-delay: {{ delay }}s;
            --snow-drift: {{ drift }}px;
          "
        ></div>
      {% endfor %}
    {% endif %}
  </div>

  <div class="ai-christmas-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-christmas-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-christmas-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
    {% endif %}

    {% if block.settings.text != blank %}
      <div class="ai-christmas-text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
    {% endif %}

    {% if block.settings.button_text != blank %}
      <a href="{{ block.settings.button_link }}" class="ai-christmas-button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</christmas-section-{{ ai_gen_id }}>

<script>
  (function() {
    class ChristmasSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.initializeEffects();
      }

      initializeEffects() {
        const lights = this.querySelectorAll('.ai-christmas-light-{{ ai_gen_id }}');
        lights.forEach((light) => {
          light.style.opacity = '1';
        });

        const sparkles = this.querySelectorAll('.ai-christmas-sparkle-{{ ai_gen_id }}');
        sparkles.forEach((sparkle) => {
          sparkle.style.opacity = '1';
        });
      }
    }

    customElements.define('christmas-section-{{ ai_gen_id }}', ChristmasSection{{ ai_gen_id }});
  })();
</script>

