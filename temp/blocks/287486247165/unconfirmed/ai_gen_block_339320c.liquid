{% doc %}
  @prompt
    Add a customizable gradient overlay feature to the custom hover slider section. The gradient should:
    - Start from the bottom with a dark color (default: dark navy or black with 70% opacity)
    - Fade to transparent towards the top
    - Be adjustable with settings for gradient start color, opacity, and height
    - Improve text readability over images
    - Match the premium brand aesthetic with smooth transitions
    
    Include theme settings to control:
    - Overlay gradient start color
    - Overlay opacity percentage
    - Gradient height (how far up it extends)
    - Option to enable/disable per slide
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hover-slider-{{ ai_gen_id }} {
    display: block;
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-hover-slider-container-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    height: {{ block.settings.slider_height }}px;
  }

  .ai-hover-slider-slide-{{ ai_gen_id }} {
    position: relative;
    flex: 0 0 100%;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .ai-hover-slider-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .ai-hover-slider-slide-{{ ai_gen_id }}:hover .ai-hover-slider-image-{{ ai_gen_id }} {
    transform: scale({{ block.settings.zoom_scale }});
  }

  .ai-hover-slider-overlay-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: var(--overlay-height);
    background: linear-gradient(
      to top,
      var(--overlay-color) 0%,
      transparent 100%
    );
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .ai-hover-slider-content-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: {{ block.settings.content_padding }}px;
    z-index: 2;
    color: {{ block.settings.text_color }};
  }

  .ai-hover-slider-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    margin: 0 0 8px 0;
    line-height: 1.2;
  }

  .ai-hover-slider-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    margin: 0 0 16px 0;
    line-height: 1.5;
    opacity: 0.95;
  }

  .ai-hover-slider-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .ai-hover-slider-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    transform: translateY(-2px);
  }

  .ai-hover-slider-nav-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 8px;
    z-index: 3;
  }

  .ai-hover-slider-dot-{{ ai_gen_id }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.5);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }

  .ai-hover-slider-dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.nav_active_color }};
    width: 24px;
    border-radius: 5px;
  }

  .ai-hover-slider-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-hover-slider-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hover-slider-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .ai-hover-slider-container-{{ ai_gen_id }} {
      height: {{ block.settings.slider_height | times: 0.7 }}px;
    }

    .ai-hover-slider-title-{{ ai_gen_id }} {
