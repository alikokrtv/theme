>
  {% if block.settings.show_snowflakes %}
    <div class="ai-christmas-categories__snowflakes-{{ ai_gen_id }}">
      {% for i in (1..15) %}
        {% assign delay = forloop.index | times: 0.5 %}
        {% assign duration = forloop.index | modulo: 5 | plus: 8 %}
        {% assign left = forloop.index | times: 6 | modulo: 100 %}
        <div
          class="ai-christmas-categories__snowflake-{{ ai_gen_id }}"
          style="left: {{ left }}%; animation-duration: {{ duration }}s; animation-delay: {{ delay }}s;"
        >
          ‚ùÑ
        </div>
      {% endfor %}
    </div>
  {% endif %}

  {% if block.settings.show_ornaments %}
    <div class="ai-christmas-categories__ornament-{{ ai_gen_id }} ai-christmas-categories__ornament-{{ ai_gen_id }}--1">üéÑ</div>
    <div class="ai-christmas-categories__ornament-{{ ai_gen_id }} ai-christmas-categories__ornament-{{ ai_gen_id }}--2">üéÅ</div>
    <div class="ai-christmas-categories__ornament-{{ ai_gen_id }} ai-christmas-categories__ornament-{{ ai_gen_id }}--3">‚≠ê</div>
    <div class="ai-christmas-categories__ornament-{{ ai_gen_id }} ai-christmas-categories__ornament-{{ ai_gen_id }}--4">üîî</div>
  {% endif %}

  <div class="ai-christmas-categories__container-{{ ai_gen_id }}">
    <div class="ai-christmas-categories__header-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-christmas-categories__title-{{ ai_gen_id }}">
          {{ block.settings.title }}
        </h2>
      {% endif %}
      {% if block.settings.subtitle != blank %}
        <p class="ai-christmas-categories__subtitle-{{ ai_gen_id }}">
          {{ block.settings.subtitle }}
        </p>
      {% endif %}
    </div>

    <div class="ai-christmas-categories__grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign collection_key = 'collection_' | append: i
          assign title_key = 'category_title_' | append: i
          assign description_key = 'category_description_' | append: i
          assign image_key = 'category_image_' | append: i
          assign button_text_key = 'button_text_' | append: i

          assign collection = block.settings[collection_key]
          assign title = block.settings[title_key]
          assign description = block.settings[description_key]
          assign image = block.settings[image_key]
          assign button_text = block.settings[button_text_key]
        %}

        {% if collection != blank or image != blank %}
          <a
            href="{% if collection != blank %}{{ collection.url }}{% else %}#{% endif %}"
            class="ai-christmas-categories__card-{{ ai_gen_id }}"
          >
            <div class="ai-christmas-categories__card-image-wrapper-{{ ai_gen_id }}">
              {% if image != blank %}
                <img
                  src="{{ image | image_url: width: 600 }}"
                  alt="{{ image.alt | escape }}"
                  class="ai-christmas-categories__card-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="600"
                >
              {% elsif collection != blank and collection.featured_image %}
                <img
                  src="{{ collection.featured_image | image_url: width: 600 }}"
                  alt="{{ collection.featured_image.alt | escape }}"
                  class="ai-christmas-categories__card-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="600"
                >
              {% else %}
                <div class="ai-christmas-categories__card-image-placeholder-{{ ai_gen_id }}">
                  {{ 'collection-apparel-1' | placeholder_svg_tag }}
                </div>
              {% endif %}

              <div class="ai-christmas-categories__card-overlay-{{ ai_gen_id }}">
                <h3 class="ai-christmas-categories__card-title-{{ ai_gen_id }}">
                  {% if title != blank %}
                    {{ title }}
                  {% elsif collection != blank %}
                    {{ collection.title }}
                  {% else %}
                    Category {{ i }}
                  {% endif %}
                </h3>

                {% if description != blank %}
                  <p class="ai-christmas-categories__card-description-{{ ai_gen_id }}">
                    {{ description }}
                  </p>
                {% endif %}

                <span class="ai-christmas-categories__card-button-{{ ai_gen_id }}">
                  {% if button_text != blank %}
                    {{ button_text }}
                  {% else %}
                    Shop Now
                  {% endif %}
                </span>
              </div>
            </div>
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</christmas-categories-{{ ai_gen_id }}>

<script>
  (function() {
    class ChristmasCategories{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.initParallax();
      }

      initParallax() {
        const cards = this.querySelectorAll('.ai-christmas-categories__card-{{ ai_gen_id }}');

        cards.forEach((card) => {
          card.addEventListener('mousemove', (e) => {
            const rect = card.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;

            const centerX = rect.width / 2;
            const centerY = rect.height / 2;

            const rotateX = (y - centerY) / 20;
            const rotateY = (centerX - x) / 20;

            const image = card.querySelector('.ai-christmas-categories__card-image-{{ ai_gen_id }}');
            if (image) {
              image.style.transform = `scale(1.1) rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
            }
          });

          card.addEventListener('mouseleave', () => {
            const image = card.querySelector('.ai-christmas-categories__card-image-{{ ai_gen_id }}');
            if (image) {
              image.style.transform = 'scale(1.1) rotateX(0) rotateY(0)';
            }
          });
        });
      }
    }

    customElements.define('christmas-categories-{{ ai_gen_id }}', ChristmasCategories{{ ai_gen_id }});
  })();
</script>

