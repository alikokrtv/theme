{% style %}
  .ai-christmas-categories-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 60px 20px;
    background: {{ block.settings.background_gradient }};
    position: relative;
    overflow: hidden;
  }

  .ai-christmas-categories__snowflakes-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }

  .ai-christmas-categories__snowflake-{{ ai_gen_id }} {
    position: absolute;
    color: {{ block.settings.snowflake_color }};
    font-size: 20px;
    opacity: 0.8;
    animation: ai-christmas-snowfall-{{ ai_gen_id }} linear infinite;
  }

  @keyframes ai-christmas-snowfall-{{ ai_gen_id }} {
    0% {
      transform: translateY(-10px) rotate(0deg);
      opacity: 0;
    }
    10% {
      opacity: 0.8;
    }
    90% {
      opacity: 0.8;
    }
    100% {
      transform: translateY(100vh) rotate(360deg);
      opacity: 0;
    }
  }

  .ai-christmas-categories__container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .ai-christmas-categories__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 50px;
  }

  .ai-christmas-categories__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 15px;
    font-weight: 700;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
  }

  .ai-christmas-categories__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-christmas-categories__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
    margin-top: 40px;
  }

  .ai-christmas-categories__card-{{ ai_gen_id }} {
    position: relative;
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    background: {{ block.settings.card_background }};
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    transition: all 0.4s ease;
    cursor: pointer;
  }

  .ai-christmas-categories__card-{{ ai_gen_id }}:hover {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.25);
  }

  .ai-christmas-categories__card-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
  }

  .ai-christmas-categories__card-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .ai-christmas-categories__card-{{ ai_gen_id }}:hover .ai-christmas-categories__card-image-{{ ai_gen_id }} {
    transform: scale(1.1);
  }

  .ai-christmas-categories__card-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.7) 100%);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 25px;
    transition: background 0.4s ease;
  }

  .ai-christmas-categories__card-{{ ai_gen_id }}:hover .ai-christmas-categories__card-overlay-{{ ai_gen_id }} {
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.2) 0%, rgba(0, 0, 0, 0.8) 100%);
  }

  .ai-christmas-categories__card-title-{{ ai_gen_id }} {
    font-size: 24px;
    color: #ffffff;
    margin: 0 0 8px;
    font-weight: 700;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .ai-christmas-categories__card-description-{{ ai_gen_id }} {
    font-size: 14px;
    color: #ffffff;
    margin: 0 0 15px;
    opacity: 0.9;
  }

  .ai-christmas-categories__card-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    text-align: center;
  }

  .ai-christmas-categories__card-button-{{ ai_gen_id }}:hover {
    background: {{ block.settings.button_hover_background }};
    transform: scale(1.05);
  }

  .ai-christmas-categories__ornament-{{ ai_gen_id }} {
    position: absolute;
    font-size: 40px;
    opacity: 0.3;
    pointer-events: none;
    animation: ai-christmas-float-{{ ai_gen_id }} 3s ease-in-out infinite;
  }

  @keyframes ai-christmas-float-{{ ai_gen_id }} {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(10deg);
    }
  }

  .ai-christmas-categories__ornament-{{ ai_gen_id }}--1 {
    top: 10%;
    left: 5%;
    animation-delay: 0s;
  }

  .ai-christmas-categories__ornament-{{ ai_gen_id }}--2 {
    top: 20%;
    right: 8%;
    animation-delay: 1s;
  }

  .ai-christmas-categories__ornament-{{ ai_gen_id }}--3 {
    bottom: 15%;
    left: 10%;
    animation-delay: 2s;
  }

  .ai-christmas-categories__ornament-{{ ai_gen_id }}--4 {
    bottom: 25%;
    right: 5%;
    animation-delay: 1.5s;
  }

  @media screen and (max-width: 749px) {
    .ai-christmas-categories-{{ ai_gen_id }} {
      padding: 40px 15px;
    }

    .ai-christmas-categories__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .ai-christmas-categories__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.7);
    }

    .ai-christmas-categories__subtitle-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subtitle_size }}px * 0.85);
    }

    .ai-christmas-categories__ornament-{{ ai_gen_id }} {
      font-size: 30px;
    }
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
