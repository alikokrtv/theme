  /* --- Mobile / responsive fixes --- */

/* iOS/Android dynamic viewport fix */
#shopify-section-{{ section.id }} {
  --hero-height-dvh: calc({{ section.settings.hero_height }} * 1dvh);
}

.corporate-hero {
  min-height: var(--hero-height);            /* fallback */
  min-height: var(--hero-height-dvh);        /* modern browsers */
}

@media (max-width: 768px) {
  .corporate-hero__content {
    padding: 1.25rem;
    max-width: 92vw;
  }

  .corporate-hero__logo {
    letter-spacing: 0.06em;
    line-height: 1.05;
    word-break: break-word;
    text-wrap: balance;
  }

  .corporate-hero__tagline {
    margin-bottom: 1.25rem;
    text-wrap: balance;
  }

  .corporate-hero__divider {
    margin: 0 auto 1.25rem;
    width: 72px;
  }

  .corporate-hero__description {
    font-size: 1rem;
    line-height: 1.65;
    margin: 0 auto 1.75rem;
    max-width: 36rem;
    text-wrap: pretty;
  }

  .corporate-hero__cta {
    gap: 0.75rem;
  }

  .corporate-hero__btn {
    padding: 0.9rem 1.4rem;
    font-size: 0.95rem;
    width: 100%;
    max-width: 360px; /* tek kolon, ama çok uzamasın */
    justify-content: center;
  }

  .corporate-hero__scroll {
    bottom: 1rem;
  }
}

@media (max-width: 420px) {
  .corporate-hero__content {
    padding: 1rem;
  }

  .corporate-hero__btn {
    max-width: 100%;
  }

  .corporate-hero__scroll svg {
    width: 26px;
    height: 26px;
  }
}

/* Reduced motion support */
@media (prefers-reduced-motion: reduce) {
  .corporate-hero__particle,
  .corporate-hero__scroll,
  .corporate-hero__logo,
  .corporate-hero__tagline,
  .corporate-hero__divider,
  .corporate-hero__description,
  .corporate-hero__cta {
    animation: none !important;
    transform: none !important;
    opacity: 1 !important;
  }
}

  #shopify-section-{{ section.id }} {
    --hero-height: {{ section.settings.hero_height }}vh;
  }

  .corporate-hero {
    position: relative;
    min-height: var(--hero-height);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: {{ section.settings.background_color | default: '#0a1628' }};
  }

  .corporate-hero__gradient {
    position: absolute;
    inset: 0;
    background: {{ section.settings.gradient | default: 'linear-gradient(135deg, #0a1628 0%, #1e3a5f 50%, #00bcd4 100%)' }};
    opacity: 0.95;
  }

  .corporate-hero__particles {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .corporate-hero__particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    animation: float-particle 15s infinite ease-in-out;
  }

  .corporate-hero__particle:nth-child(1) { left: 10%; top: 20%; animation-delay: 0s; }
  .corporate-hero__particle:nth-child(2) { left: 20%; top: 80%; animation-delay: 2s; }
  .corporate-hero__particle:nth-child(3) { left: 30%; top: 40%; animation-delay: 4s; }
  .corporate-hero__particle:nth-child(4) { left: 50%; top: 60%; animation-delay: 1s; }
  .corporate-hero__particle:nth-child(5) { left: 70%; top: 30%; animation-delay: 3s; }
  .corporate-hero__particle:nth-child(6) { left: 80%; top: 70%; animation-delay: 5s; }
  .corporate-hero__particle:nth-child(7) { left: 90%; top: 50%; animation-delay: 2.5s; }
  .corporate-hero__particle:nth-child(8) { left: 15%; top: 60%; animation-delay: 3.5s; }

  @keyframes float-particle {
    0%, 100% { transform: translateY(0) scale(1); opacity: 0.3; }
    50% { transform: translateY(-100px) scale(1.5); opacity: 0.8; }
  }

  .corporate-hero__content {
    position: relative;
    z-index: 10;
    text-align: center;
    padding: 2rem;
    max-width: 1000px;
  }

  .corporate-hero__logo {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 800;
    letter-spacing: 0.1em;
    color: #fff;
    margin-bottom: 1rem;
    opacity: 0;
    transform: translateY(30px);
    animation: hero-reveal 1s ease forwards 0.3s;
  }

  .corporate-hero__logo span {
    color: {{ section.settings.accent_color | default: '#00bcd4' }};
  }

  .corporate-hero__tagline {
    font-size: clamp(1.2rem, 3vw, 2rem);
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
    font-weight: 300;
    letter-spacing: 0.05em;
    opacity: 0;
    transform: translateY(30px);
    animation: hero-reveal 1s ease forwards 0.6s;
  }

  .corporate-hero__divider {
    width: 100px;
    height: 3px;
    background: {{ section.settings.accent_color | default: '#00bcd4' }};
    margin: 0 auto 2rem;
    opacity: 0;
    transform: scaleX(0);
    animation: divider-reveal 0.8s ease forwards 0.9s;
  }

  .corporate-hero__description {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.7);
    max-width: 600px;
    margin: 0 auto 2.5rem;
    line-height: 1.8;
    opacity: 0;
    transform: translateY(30px);
    animation: hero-reveal 1s ease forwards 1.2s;
  }

  .corporate-hero__cta {
    display: inline-flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    opacity: 0;
    transform: translateY(30px);
    animation: hero-reveal 1s ease forwards 1.5s;
  }

  .corporate-hero__btn {
    padding: 1rem 2.5rem;
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-radius: 50px;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .corporate-hero__btn--primary {
    background: {{ section.settings.accent_color | default: '#00bcd4' }};
    color: #fff;
    border: 2px solid {{ section.settings.accent_color | default: '#00bcd4' }};
  }

  .corporate-hero__btn--primary:hover {
    background: transparent;
    color: {{ section.settings.accent_color | default: '#00bcd4' }};
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(0, 188, 212, 0.3);
  }

  .corporate-hero__btn--secondary {
    background: transparent;
    color: #fff;
    border: 2px solid rgba(255, 255, 255, 0.5);
  }

  .corporate-hero__btn--secondary:hover {
    border-color: #fff;
    transform: translateY(-3px);
  }

  .corporate-hero__scroll {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    color: rgba(255, 255, 255, 0.6);
    animation: bounce 2s infinite;
  }

  .corporate-hero__scroll svg {
    width: 30px;
    height: 30px;
  }

  @keyframes hero-reveal {
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes divider-reveal {
    to { opacity: 1; transform: scaleX(1); }
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% { transform: translateX(-50%) translateY(0); }
    40% { transform: translateX(-50%) translateY(-10px); }
    60% { transform: translateX(-50%) translateY(-5px); }
  }

  /* Parallax effect on scroll */
  .corporate-hero[data-parallax] .corporate-hero__content {
    will-change: transform;
  }
  /* =========================
   DESKTOP (default)
   ========================= */

.corporate-hero__logo,
.corporate-hero__logo span {
  text-shadow: 1px 1px 2px black, 0 0 1em white, 0 0 0.2em cyan;
  font-family: "Trade Gothic LT Std Extended Bold", sans-serif;
}


/* =========================
   MOBILE FIX (broken word wrap)
   ========================= */
@media (max-width: 768px) {
  /* Harf harf kırılmayı engelle */
  .corporate-hero__logo {
    letter-spacing: 0.04em !important;
    word-break: keep-all !important;
    overflow-wrap: normal !important;
    white-space: normal !important;
    line-height: 1.05 !important;

    /* Mobilde iki satıra bilinçli indir: TECHNO / FASHION */
    display: flex !important;
    flex-direction: column !important;
    align-items: center !important;
    gap: 0.2em !important;

    /* Mobilde fontu güvenli ölçekle */
    font-size: clamp(2.6rem, 12vw, 4.1rem) !important;
  }

  .corporate-hero__logo span {
    display: block !important;
  }

 
}

/* Extra small phones */
.corporate-hero__logo-image {
  margin: 0 auto 1rem;
  display: flex;
  justify-content: center;
}

.corporate-hero__logo-img {
  width: min(100%, {{ section.settings.logo_max_width }}px);
  height: auto;
  display: block;

  /* Eğer PNG şeffafsa ve parlak görünmesini istiyorsan */
  filter: drop-shadow(0 0 18px rgba(255,255,255,0.18))
          drop-shadow(0 0 26px rgba(0,188,212,0.25));
}

@media (max-width: 768px) {
  .corporate-hero__logo-img {
    width: min(86vw, {{ section.settings.logo_max_width_mobile }}px);
  }
}


</style>

<div class="corporate-hero" data-parallax>
  <div class="corporate-hero__gradient"></div>
  
  <div class="corporate-hero__particles">
    <span class="corporate-hero__particle"></span>
    <span class="corporate-hero__particle"></span>
    <span class="corporate-hero__particle"></span>
    <span class="corporate-hero__particle"></span>
    <span class="corporate-hero__particle"></span>
    <span class="corporate-hero__particle"></span>
    <span class="corporate-hero__particle"></span>
    <span class="corporate-hero__particle"></span>
  </div>

  <div class="corporate-hero__content">
    {%- if section.settings.logo_image != blank -%}
  <div class="corporate-hero__logo-image">
    {{ section.settings.logo_image | image_url: width: 1200 | image_tag:
      class: 'corporate-hero__logo-img',
      loading: 'eager',
      fetchpriority: 'high',
      alt: 'TechnoFashion'
    }}
  </div>
{%- else -%}
  <h1 class="corporate-hero__logo">
    {{ section.settings.logo_text_1 | default: 'TECHNO' }}<span>{{ section.settings.logo_text_2 | default: 'FASHION' }}</span>
  </h1>
{%- endif -%}

    
    <p class="corporate-hero__tagline">{{ section.settings.tagline | default: 'Powering Your Lifestyle' }}</p>
    
    <div class="corporate-hero__divider"></div>
    
    {%- if section.settings.description != blank -%}
      <p class="corporate-hero__description">{{ section.settings.description }}</p>
    {%- endif -%}

    <div class="corporate-hero__cta">
      {%- if section.settings.button_1_text != blank -%}
        <a href="{{ section.settings.button_1_url }}" class="corporate-hero__btn corporate-hero__btn--primary">
          {{ section.settings.button_1_text }}
        </a>
      {%- endif -%}
      
      {%- if section.settings.button_2_text != blank -%}
        <a href="{{ section.settings.button_2_url }}" class="corporate-hero__btn corporate-hero__btn--secondary">
          {{ section.settings.button_2_text }}
        </a>
      {%- endif -%}
    </div>
  </div>

  <div class="corporate-hero__scroll">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M12 5v14M19 12l-7 7-7-7"/>
    </svg>
  </div>
</div>

