{%- if section.blocks.size > 0 -%}
  {%- render 'section-spacing-collapsing' -%}

  <style>
    #shopify-section-{{ section.id }} {
      {% if section.settings.remove_vertical_spacing %}--section-spacing-block: 0px;{% endif %}
      {% if section.settings.remove_horizontal_spacing %}--section-spacing-inline: 0px;{% endif %}
      {% if section.settings.background_gradient != blank %}
        background: {{ section.settings.background_gradient }};
      {% elsif section.settings.background != blank %}
        background-color: {{ section.settings.background }};
      {% endif %}
      {% if section.settings.text_color != blank %}
        color: {{ section.settings.text_color }};
      {% endif %}
    }
  </style>

  <section
    id="custom-section-{{ section.id }}"
    class="custom-block-section {% if section.settings.full_width %}custom-block-section--fullwidth{% endif %}"
    {% render 'section-properties' %}
  >
    <div class="custom-block-section__inner" style="text-align: {{ section.settings.content_alignment }};">
      {% content_for 'blocks' %}
    </div>
  </section>

  <style>
    .custom-block-section {
      padding: var(--section-spacing-block, 60px) var(--section-spacing-inline, 20px);
      position: relative;
      width: 100%;
      display: block;
    }

    .custom-block-section__inner {
      max-width: 1200px;
      margin: 0 auto;
    }

    .custom-block-section--fullwidth .custom-block-section__inner {
      max-width: 100%;
    }

    /* Responsive default spacing */
    @media (max-width: 749px) {
      .custom-block-section {
        padding: var(--section-spacing-block, 40px) 15px;
      }
    }
  </style>
{%- endif -%}

{% schema %}
{
  "name": "Universal Block Section",
  "tag": "section",
  "class": "shopify-section--blocks",
  "disabled_on": {
    "groups": ["custom.overlay"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "remove_vertical_spacing",
      "label": "Remove vertical spacing",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "remove_horizontal_spacing",
      "label": "Remove horizontal spacing",
      "default": false
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Colors",
      "info": "Gradient replaces solid colors when set."
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background color"
    },
    {
      "type": "color_background",
      "id": "background_gradient",
      "label": "Background gradient"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color"
    }
  ],
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Universal block section",
      "category": "Layout"
    }
  ]
}




{% endschema %}
